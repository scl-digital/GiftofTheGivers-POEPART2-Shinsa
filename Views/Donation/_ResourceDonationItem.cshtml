@model DisasterAlleviationFoundation.Models.ResourceDonationViewModel

<div class="border rounded p-3 mb-3">
    <div class="row g-3">
        <div class="col-md-3">
            <label asp-for="Category" class="form-label">Category</label>
            <select asp-for="Category" class="form-select">
                <option value="@DisasterAlleviationFoundation.Models.ResourceCategory.Food">Food</option>
                <option value="@DisasterAlleviationFoundation.Models.ResourceCategory.Clothing">Clothing</option>
                <option value="@DisasterAlleviationFoundation.Models.ResourceCategory.Medical">Medical</option>
                <option value="@DisasterAlleviationFoundation.Models.ResourceCategory.BabyChildCare">Baby & Child Care</option>
                <option value="@DisasterAlleviationFoundation.Models.ResourceCategory.PersonalHygiene">Personal Hygiene</option>
                <option value="@DisasterAlleviationFoundation.Models.ResourceCategory.Household">Household</option>
                <option value="@DisasterAlleviationFoundation.Models.ResourceCategory.Other">Other</option>
            </select>
        </div>
        <div class="col-md-3">
            <label asp-for="ItemName" class="form-label">Item Name</label>
            <input asp-for="ItemName" class="form-control" />
            <span asp-validation-for="ItemName" class="text-danger"></span>
        </div>
        <div class="col-md-2">
            <label asp-for="Quantity" class="form-label">Quantity</label>
            <input asp-for="Quantity" type="number" min="1" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <div class="col-md-2">
            <label asp-for="UnitOfMeasure" class="form-label">Unit</label>
            <input asp-for="UnitOfMeasure" class="form-control" placeholder="e.g., pieces, kg" />
        </div>
        <div class="col-md-2">
            <label asp-for="EstimatedValue" class="form-label">Est. Value</label>
            <input asp-for="EstimatedValue" type="number" step="0.01" class="form-control" />
        </div>
        <div class="col-12">
            <label asp-for="Description" class="form-label">Description</label>
            <input asp-for="Description" class="form-control" />
        </div>
    </div>
</div>


