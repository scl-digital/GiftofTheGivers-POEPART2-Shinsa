@model DisasterAlleviationFoundation.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid py-4">
    <style>
        .cta-card {
            background: #ffffff;
            border: 1px solid #e5e5e5;
            border-radius: 4%;
            box-shadow: none;
            padding: 24px;
            height: 100%;
            transition: none;
        }
        .cta-card:hover { box-shadow: none; transform: none; }
        .cta-icon {
            width: 56px; height: 56px;
            display: inline-flex; align-items: center; justify-content: center;
            border-radius: 50%;
            background: #eeeeee; color: #000000;
            box-shadow: none;
            margin-bottom: 12px;
            font-size: 22px;
        }
        .cta-title { font-weight: 700; letter-spacing: .2px; }
        .cta-text { color: #4d4d4d; }
        .cta-actions .btn { border-radius: 4%; padding: 10px 14px; }
    </style>

    <div class="d-flex justify-content-end mb-3">
        <form asp-controller="Account" asp-action="Logout" method="post" class="m-0">
            <button type="submit" class="btn btn-sm">
                <i class="fas fa-sign-out-alt me-1"></i>Logout
            </button>
        </form>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-12 col-md-6 col-lg-4">
            <div class="cta-card text-start h-100">
                <div class="cta-icon">
                    <i class="fas fa-hands-helping"></i>
                </div>
                <h5 class="cta-title mb-2">Volunteer</h5>
                <p class="cta-text mb-3">Join our volunteer network and make a direct impact in disaster-affected communities.</p>
                <div class="cta-actions">
                    <form asp-action="Volunteer" method="post">
                        <button type="submit" class="btn">
                            <i class="fas fa-hand-holding-heart me-2"></i>
                            Become a Volunteer
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-lg-4">
            <div class="cta-card text-start h-100">
                <div class="cta-icon">
                    <i class="fas fa-donate"></i>
                </div>
                <h5 class="cta-title mb-2">Donate</h5>
                <p class="cta-text mb-3">Your support provides food, clothing, and medical supplies to affected areas.</p>
                <div class="cta-actions">
                    <a asp-controller="Donation" asp-action="Donate" class="btn">
                        <i class="fas fa-heart me-2"></i>
                        Make a Donation
                    </a>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-lg-4">
            <div class="cta-card text-start h-100">
                <div class="cta-icon">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <h5 class="cta-title mb-2">Emergency Response</h5>
                <p class="cta-text mb-3">Report emergencies and access real-time disaster response information and resources.</p>
                <div class="cta-actions">
                    <a asp-controller="Emergency" asp-action="Report" class="btn">
                        <i class="fas fa-phone me-2"></i>
                        Report Emergency
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-clock me-2"></i>
                        Recent Activity
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentActivities.Any())
                    {
                        @foreach (var activity in Model.RecentActivities)
                        {
                            <div class="activity-item @activity.Type">
                                <div class="d-flex align-items-start">
                                    <div class="me-3">
                                        <span class="fs-5">@activity.Icon</span>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">@activity.Title</h6>
                                        <p class="mb-1 text-muted">@activity.Description</p>
                                        <small class="text-muted">
                                            <i class="fas fa-clock me-1"></i>
                                            @activity.Timestamp.ToString("MMM dd, yyyy 'at' h:mm tt")
                                        </small>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">
                            <i class="fas fa-info-circle fs-1 mb-3"></i>
                            <p>No recent activity to display.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}