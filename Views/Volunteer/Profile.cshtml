@model DisasterAlleviationFoundation.Models.VolunteerProfile
@{
    ViewData["Title"] = "Volunteer Profile";
}
<div class="container mt-4">
    <h2>Volunteer Profile</h2>
    <div class="card">
        <div class="card-body">
            <p><strong>Name:</strong> @Model.User?.FullName</p>
            <p><strong>Phone:</strong> @Model.PhoneNumber</p>
            <p><strong>Emergency Contact:</strong> @Model.EmergencyContact (@Model.EmergencyContactPhone)</p>
            <p><strong>Skills:</strong> @Model.Skills</p>
            <p><strong>Availability:</strong> @Model.Availability</p>
            <p><strong>Languages:</strong> @Model.Languages</p>
            <p><strong>Previous Experience:</strong> @Model.PreviousExperience</p>
            <p><strong>Status:</strong> @Model.Status</p>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Dashboard" class="btn btn-secondary">Back to Dashboard</a>
    </div>
</div>
