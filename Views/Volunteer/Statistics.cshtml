@model DisasterAlleviationFoundation.Models.VolunteerStats
@{
    ViewData["Title"] = "Volunteer Statistics";
    var history = ViewBag.History as IEnumerable<DisasterAlleviationFoundation.Models.VolunteerTaskAssignment>;
}
<div class="container mt-4">
    <h2>Volunteer Statistics</h2>
    <div class="row g-3">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <p class="mb-1">Total Hours: <strong>@Model.TotalHoursWorked</strong></p>
                    <p class="mb-1">Tasks Completed: <strong>@Model.TasksCompleted</strong></p>
                    <p class="mb-1">Active Tasks: <strong>@Model.ActiveTasks</strong></p>
                    <p class="mb-1">Average Rating: <strong>@Model.AverageRating</strong></p>
                    <p class="mb-1">Days Active: <strong>@Model.DaysActive</strong></p>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Task History</h5>
                    @if (history != null && history.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var h in history)
                            {
                                <li class="list-group-item d-flex justify-content-between">
                                    <span>@h.Task?.Title</span>
                                    <span>@h.Status</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="alert alert-info">No history available.</div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Dashboard" class="btn btn-secondary">Back to Dashboard</a>
    </div>
</div>
